<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MessageHeaderBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="Gray" />
    </Style>
    
    <Style x:Key="MessageBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    
    <Style x:Key="MessageControlStyle" TargetType="{x:Type UserControl}">
        <Setter Property="Background" Value="LightGray" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="60" />
    </Style>

</ResourceDictionary>